#!/usr/bin/env node

var apoc = require('apoc');
var util = require('util');
var server = require('../database');

apoc.query("CREATE CONSTRAINT ON (n:Person) ASSERT n.username IS UNIQUE").exec(server.server).then(function(result) {
	console.log("Creating CONSTRAINT on username");
	apoc.query("CREATE CONSTRAINT ON (n:Person) ASSERT n.email IS UNIQUE").exec(server.server).then(function(result) {
		console.log("Creating CONSTRAINT on email");
	}, function(error) {
		console.log("Error creating CONSTRAINT on username");
		console.log(error);
	});
}, function(error) {
	console.log("Error creating CONSTRAINT on email");
	console.log(error);
});