<!DOCTYPE html>
{{> toolbar}}
<md-content layout-padding layout-wrap layout="column">
    <h3>Reset Password</h3>
	<div layout="column" class="login-form" md-theme="loginDark" md-colors="{backgroundColor: 'background'}">
		<form layout="row" layout-sm="column" ng-controller="confirmReset__">
			<md-input-container>
				<label>Password</label>
				<input type="password" ng-model="reset.password">
			</md-input-container>
			<md-input-container>
				<label>Password again</label>
				<input type="password" ng-model="reset.password2">
			</md-input-container>
			<md-button type="submit" class="md-raised md-primary" style="margin: auto auto" aria-label="Reset" ng-click="confirmReset()">Reset</md-button>
		</form>
	</div>
</md-content>

